 {% extends 'base.html.twig' %}

{% block title %}liste rendez-vous{% endblock %}
{% block body %}
<div class="breadcrumb-area gradient-bg bg-cover shadow dark text-light text-center" style="background-image: url({{asset('front/img/banner/4.jpg')}})">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1>Vos Rendez-Vous</h1>
                    
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Star Doctors Area
    ============================================= -->
    <div class="doctors-area carousel-shadow inc-carousel bg-gray default-padding">
        <div class="container-lg">
            <div class="doctor-items">
                <div class="col-lg-12">
                    <div class="doctors-carousel owl-carousel owl-theme">

                        
                        {% for r in rdv %}
                        <div class="item">
                            <div class="row">
                             <img class ="thumb col-lg-5" src="{{asset('uploads/user/'~ r.med.image)}}" width="90"></img>
                                <div class="col-lg-6 info">
                                    <h4>{{ r.med.nom }} {{r.med.prenom}}</h4>
                                    <span>{{r.daterv|date('d/m/Y')}}</span>
                                    <h5>Heure du rendez-vous : <strong> <span>{{r.heurerv}}</span></strong></h5>
                                    <div class="bottom">
                                    <a href="{{ path ('updatefr',{'id':r.id}) }}" class="btn circle btn-sm btn-gradient">report</a>
                                     <a href="{{ path ('removefr',{'id':r.id}) }}" class="btn circle btn-sm btn-gradient">supp</a>    
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    
  
{% endblock %}
