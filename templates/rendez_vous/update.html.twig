{% extends 'base2.html.twig' %}
{% block title %}modifier{% endblock %}

{% block body %}

<section class="content">    
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Basic Elements</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Forms</a></li>
                        <li class="breadcrumb-item active">Basic Elements</li>
                    </ul>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <div class="input-group m-b-0">                
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Input -->
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2><strong>Modifier votre rendez-vous</strong>  </h2>                        
                    </div>
                    <div class="body">
                        <h2 class="card-inside-title">Changer la date de votre rendez-vous </h2>
                        <div class="row clearfix">
                            <div class="col-sm-12">
                            {{ form_start(form, {'attr': {'class': 'col-sm-12'}}) }}
                                <div class="form-group">                                    
                                    {{ form_widget(form.date_rv, {'attr': {'class': ''}}) }} 
                                </div>
                                <div class="form-group">                                   
                                 {{ form_widget(form.heure_rv, {'attr': {'class': ''}}) }}

                                </div>
                                <div>                                   
                                 {{ form_widget(form.type_rv, {'attr': {'class': ''}}) }}

                                </div>
                            </div>
                        </div>
                       <button type="submit" class="btn btn-raised btn-primary btn-round waves-effect">Envoyer demande de modification</button>
                     {{ form_end(form) }} 
                                            
                        
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </div>
</section>


{% endblock %}