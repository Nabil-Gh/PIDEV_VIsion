{% extends 'base2.html.twig' %}

{% block title %}Liste des Pharmacies{% endblock %}

{% block body %}
<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Liste des Pharmacies</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Admin</a></li>
                        <li class="breadcrumb-item active">Liste des Pharmacies</li>
                    </ul>
                </div>            
               
            </div>
        </div>
        <!-- Basic Examples -->
        <div class="row clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="header">
                        <h2> Liste des <strong>Pharmacies</strong> </h2>
                        
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Nom </th>
                                        <th>Email</th>
                                        <th>Telephone</th>
                                        <th>Type</th>
                                        <th>Date de Naissance</th>
                                        <th>sexe</th>
                                        <th>Date d'adhesion</th>
                                        <th>Etat</th>
                                        <th>supprimer</th>
                                    </tr>
                                </thead>
                               
                                <tbody>
                                {% for a in user %}
                                  {% if a.roles[0]=="ROLE_PHARMACIE" %}
                                    <tr>
                                        <td>{{a.prenom}} {{a.nom}}</td>
                                        <td>{{a.email}}</td>
                                        <td>{{a.telephone}}</td>
                                        {% if a.roles[0] == "ROLE_PHARMACIE" %}
                                        <td> {{a.specialite}}</td>
                                        {% else %}
                                        <td> {{a.roles[0]}}</td>
                                        {% endif %}
                                        
                                        
                                        <td>{{a.daten|date("d/m/Y")}}</td>
                                        <td>{{a.sexe}}</td>
                                        <td>{{a.datecr|date("d/m/Y")}}</td>
                                        
                                        <td>
                                         {% if a.isactivated == 0 %}
                                        <a href="{{ path ('activer_user',{'id':a.id}) }}" class="badge badge-primary">Bloqué</a>
                                        {% elseif a.isactivated == 1 %}
                                        <a  href="{{ path ('bloquer_user',{'id':a.id}) }}" class="badge badge-success">Activé</a>

                                        {% endif %}
                                        </td>
                                        
                                        <td><a class="button button-small edit" title="Delete" href="{{ path ('supprimer_user',{'id':a.id}) }}"><i class="zmdi zmdi-delete"></i>   Supprimer</a></td>
                                        
                                    </tr>
                                    {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Basic Examples --> 
        
        <!-- #END# Exportable Table --> 
    </div>
</section>
{% endblock %}