{% extends 'base2.html.twig' %}

{% block title %}dashboard{% endblock %}

{% block body %}
<section class="content profile-page">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row clearfix">
                <div class="col-lg-5 col-md-5 col-sm-12">
                    <h2>Profile</h2>
                    <ul class="breadcrumb padding-0">
                        <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i></a></li>
                        <li class="breadcrumb-item"><a href="javascript:void(0);">Pages</a></li>
                        <li class="breadcrumb-item active">Profile</li>
                    </ul>
                </div>            
                <div class="col-lg-7 col-md-7 col-sm-12">
                    <div class="input-group m-b-0">                
                        <input type="text" class="form-control" placeholder="Search...">
                        <span class="input-group-addon">
                            <i class="zmdi zmdi-search"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="body bg-dark profile-header">
                        <div class="row">
                            <div class="col-lg-10 col-md-12">
                               
                             {% if  user1.image != null %}
                                <img src="{{asset('uploads/user/'~ user1.image)}}" height="180"  class="user_pic rounded img-raised" alt="User">
                             {% else %}
                                <img src="{{asset('img/user-icon.jpg')}}" height="180" class="user_pic rounded img-raised" alt="Thumb">
                             {% endif %}
                                
                                <div class="detail">
                                    <div class="u_name">
                                        <h4><strong>{{user1.prenom}}</strong> {{user1.Nom}}</h4>
                                 
                                    </div>
                                    </br></br></br></br></br></br></br></br></br></br>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <ul class="nav nav-tabs profile_tab">
                        <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#overview">Info Générale</a></li>

                        
                    </ul>
                </div>
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="overview">
                        <div class="row">
                            <div class="col-lg-3 col-md-6 col-6">
                                <div class="card text-center">
                                    <div class="body">
                                        <i class="zmdi zmdi-thumb-up zmdi-hc-2x"></i>
                                        <h5 class="m-b-0 number count-to" data-from="0" data-to="1203" data-speed="1000" data-fresh-interval="700">1203</h5>
                                        <small>Consultations</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-6">
                                <div class="card text-center">
                                    <div class="body">                            
                                        <i class="zmdi zmdi-comment-text zmdi-hc-2x"></i>
                                        <h5 class="m-b-0 number count-to" data-from="0" data-to="324" data-speed="1000" data-fresh-interval="700">324</h5>
                                        <small>Commentaires</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-6">
                                <div class="card text-center">
                                    <div class="body">
                                        <i class="zmdi zmdi-eye zmdi-hc-2x"></i>
                                        <h5 class="m-b-0 number count-to" data-from="0" data-to="1980" data-speed="1000" data-fresh-interval="700">1980</h5>
                                        <small>Forums</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6 col-6">
                                <div class="card text-center">
                                    <div class="body">
                                        <i class="zmdi zmdi-attachment zmdi-hc-2x"></i>
                                        <h5 class="m-b-0 number count-to" data-from="0" data-to="52" data-speed="1000" data-fresh-interval="700">52</h5>
                                        <small>Attachment</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-12">
                                <div class="card">
                                    <div class="header">
                                        <h2><strong>Info</strong></h2>
                                        <ul class="header-dropdown">
                                            <li class="dropdown"> <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-more"></i> </a>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    
                                                    <li><a href="javascript:void(0);">Bloquer</a></li>
                                                    <li><a href="javascript:void(0);" class="boxs-close">Delete</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="body">
                                        
                                       
                                        <small class="text-muted">Email </small>
                                        <p>{{user1.email}}  </p>
                                        <hr>
                                       <small class="text-muted"> Date de Naissance</small>
                                        <p>{{user1.daten|date("d/m/Y")}}</p>
                                        <hr>
                                        <small class="text-muted"> Date de création du compte</small>
                                        <p>{{user1.datecr|date("d/m/Y")}}</p>
                                        <hr>
                                        <small class="text-muted"> sexe</small>
                                        <p>{{user1.sexe}}</p>
                                        <hr>
                                         <small class="text-muted"> Type</small>
                                        <p>{{user1.roles[0]}}</p>
                                        <hr>
                                         <small class="text-muted"> Etat</small>
                                         {% if user1.isactivated == 0 %}
                                        <p>Bloqué</p>
                                         {% else %}
                                        <p>Activé</p>
                                        {% endif %}
                                        <hr>
                                    </div>
                                </div>
                               
                            </div>
                            <div class="col-lg-8 col-md-12">
                                <div class="card">
                                   <div class="header">
                                        <h2><strong>ADRESSE</strong></h2>
                                        
                                    </div>
                                   
                                    <div class="body">
                                        <div class="post-img">
                                             <div class="mapouter"><div class="gmap_canvas"><iframe  id="gmap_canvas" src="https://maps.google.com/maps?q={{user1.adress}}&t=k&z=13&ie=UTF8&iwloc=&output=embed"width="100%" height="400" frameborder="0" style="border:0" allowfullscreen  scrolling="yes" marginheight="0" marginwidth="0"></iframe><a href="https://putlocker-is.org"></a><br>
                                        </div>
                                        </div>                                
                                        <h5 class="m-t-20 m-b-0 post_title">Address :</h5>                                
                                        <p>{{user1.adress}}</p>                                
                                                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                

                  

                    
                </div>
            </div>
        </div>
    </div>
</section>



{% endblock %}
