 {% extends 'base.html.twig' %}

{% block title %}Liste des Pharmacies{% endblock %}

{% block body %}
 <!-- Start Breadcrumb 
    ============================================= -->
    <div class="breadcrumb-area gradient-bg bg-cover shadow dark text-light text-center" style="background-image: url({{asset('front/img/banner/4.jpg')}});">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1>Doctors</h1>
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fas fa-home"></i> Home</a></li>
                        <li><a href="#">Pages</a></li>
                        <li class="active">Pharmacie</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->

    <!-- Star Doctors Area
    ============================================= -->
    <div class="doctors-area three-colum bg-gray default-padding bottom-less">
        <div class="container">
            <div class="doctor-items text-center">
                <div class="row">
                    <!-- Single Item -->
                    {% for m in med %}
                      {% if m.roles[0]=="ROLE_PHARMACIE" %}
                         {% if m.isactivated == 1 %}
                    <div class="col-lg-4 col-md-6 single-item">
                        <div class="item">
                            <div class="thumb">
                                {% if  m.image != null %}
                                <img src="{{asset('uploads/user/'~ m.image)}}" alt="Thumb">
                            {% else %}
                                <img src="{{asset('img/user-icon.jpg')}}" alt="Thumb">
                            {% endif %}
                                <div class="button">
                                    <a href="#">Prendre un Rendez vous</a>
                                </div>
                            </div>
                            <div class="info">
                                <h4>Dr. {{m.prenom}} {{m.nom}} </h4>
                                <span>{{m.adress}}</span>
                                <div class="consultation">
                                    <h5>Consultation - <span class="flaot-right">(012)3456789</span></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Single Item -->
                      {% endif %}
                     {% endif %}
                   {% endfor %}
             
                </div>
            </div>
        </div>
    </div>
    <!-- End Doctors Area -->
    {% endblock %}