{% extends 'base.html.twig' %}

{% block title %}ajouter un document{% endblock %}

{% block body %}




   
    
    
    <div class="breadcrumb-area gradient-bg bg-cover shadow dark text-light text-center" style="background-image: url({{asset('front/img/banner/8.jpg')}})">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1>Ajouter un Document </h1>
                    
                </div>
            </div>
        </div>
    </div>
    <div class="contact-area default-padding">
        <div class="container">
            <div class="contact-items">
                <div class="row">
                    
                    <div class="col-lg-8 left-item">
                        <div class="content">
                            <h2>Choisissez <strong>Votre Document</strong></h2>
                            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                             {{ form_widget(form.fichier, {'attr': {'class': '',}}) }}
                                            <span class="text-danger">{{ form_errors(form.fichier) }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                             {{ form_widget(form.nom, {'attr': {'class': '','placeholder': 'Nom du document'}}) }}
                                             <span class="text-danger">{{ form_errors(form.nom) }}</span>
                                             
                                        </div>
                                    </div>
                                </div>
                                
                                
                                <div class="row">
                                    <div class="col-lg-12">
                                        <button type="submit" name="submit" >
                                            Ajouter <i class="fa fa-paper-plane"></i>
                                        </button>
                                    </div>
                                </div>
                                
                             {{ form_end(form) }}   
                        </div>
                    </div>

                   

                </div>
            </div>
        </div>
    </div>
    
    
    





{% endblock %}
