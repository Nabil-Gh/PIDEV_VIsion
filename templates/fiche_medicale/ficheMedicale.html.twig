{% extends 'base2.html.twig' %}
{% block title %}Rendez-vous
{% endblock %}
{% block body %}


	<section class="content profile-page">
		<div class="container-fluid">
			<div class="block-header">
				<div class="row clearfix">
					<div class="col-lg-5 col-md-5 col-sm-12">
						<h2>Fiches</h2>

					</div>

				</div>
			</div>
			<div class="row clearfix">
				<div class="col-lg-12 col-md-12">
					<div class="card">
						<div class="body bg-dark profile-header">
							<div class="row">
								<div class="col-lg-10 col-md-12">
									<img src="{{asset('uploads/user/'~ user.image)}}" class="user_pic rounded img-raised" alt="User" height="150" width="150">
									<div class="detail">
										<div class="u_name">
											<h4>
												<strong>{{fiche.patient.nom}}</strong>
												{{fiche.patient.prenom}}</h4>

										</div>
										<div></br>
									</br>
								</br>
							</br>
						</br>
					</br>
				</br>
			</br>
		</div>
	</div>
</div>
<div class="col-lg-2 col-md-12 user_earnings"></div></div></div><ul class="nav nav-tabs profile_tab"><li class="nav-item">
</li></ul></div><div class="tab-content"><div role="tabpanel" class="tab-pane active" id="overview"><div class="row">
<div class="col-lg-4 col-md-12">
	<div class="card">
		<div class="header">
			<h2>
				<strong>Infos</strong>
			</h2>
		</div>
		<div class="body">
			<small class="text-muted">Addresse:</small>
			<p>{{user.adress}}</p>
			<hr>
			<small class="text-muted">Email:</small>
			<p>{{user.email}}</p>
			<hr>
			<small class="text-muted">Numero de telephone:</small>
			<p>{{user.telephone}}</p>
			<hr>
			<small class="text-muted">Date de naissance:</small>
			<p class="m-b-0">{{user.daten|date('d/m/Y')}}</p>
		</div>
	</div>
	<div class="card">
		<div class="header">
			<h2>
				<strong>vos</strong>
				Documents</h2>
		</div>

		{% for d in docs %}
    <div class="body">			
        <button id="open-modal-{{d.id}}">{{d.nom}}</button>

        <div id="modal-{{d.id}}" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 id="doc-name">{{d.nom}}</h2>
                    <span class="close" id="close-modal-{{d.id}}">&times;</span>
                </div>
                <div class="modal-body">
                    <img src="{{asset('uploads/doc/'~ d.fichier) }}" id="doc-file">
                </div>
            </div>
        </div>
    </div>

    <script>
        var modal{{d.id}} = document.getElementById('modal-{{d.id}}');
        var btn{{d.id}} = document.getElementById("open-modal-{{d.id}}");
        var span{{d.id}} = document.getElementById("close-modal-{{d.id}}");

        btn{{d.id}}.onclick = function() {
            modal{{d.id}}.style.display = "block";
        }

        span{{d.id}}.onclick = function() {
            modal{{d.id}}.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal{{d.id}}) {
                modal{{d.id}}.style.display = "none";
            }
        }
    </script>
{% endfor %}</div></div></div></div></div></div></section>{% endblock %}

