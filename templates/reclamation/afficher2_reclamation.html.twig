{% extends 'base.html.twig' %}


{% block title %}Liste des Reclamation{% endblock %}
{% block body %}



    <!-- Start Breadcrumb 
    ============================================= -->
    <div class="breadcrumb-area gradient-bg bg-cover shadow dark text-light text-center" style="background-image: url(assets/img/banner/8.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1>Nous contacter</h1>
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="fas fa-home"></i>Acceuil</a></li>
                        <li><a href="#">NOS</a></li>
                        <li class="active">Contacts</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Breadcrumb -->
    <!-- Star Feature Entry Area
    ============================================= -->
    <div class="feature-entry-area default-padding-bottom">
        <!-- Shape -->
        <div class="shape">
            <img src="assets/img/shape/1.png" alt="Shape">
        </div>
        <!-- End Shape -->
      
        <div class="item ">
            <div class="feature-entry-items text-center">
                <div class="row">
                    <!-- Single Item -->
                      {% for r in rec %}
                    <div class="col-lg-3 single-item">
                        <div class="item">
                            <i class="flaticon-ambulance-1"></i>
                            <h4>{{r.objet}}</h4>
                            <p>
                              {{r.description}}
                            </p>

                            
                           
                        </div>
                    </div>
                    <a class="btn btn-md btn-gradient circle"  href="{{ path ('afficherrep',{'id':r.id}) }}">Afficher Reponse <i class="fas fa-angle-right"></i></a>
                    {% endfor %}
                    <!-- End Single Item -->
                    <!-- Single Item -->
                 
                    
                </div>
            </div>
        </div>
    </div>
    
   {% endblock %}
    
   


